{
  "name": "emission",
  "version": "0.1.0",
  "description": "Artsy React(Native) components.",
  "main": "index.js",
  "scripts": {
    "flow": "flow",
    "lint": "eslint ./lib ./test",
    "test": "env NODE_ENV=test NODE_PATH=./lib mocha --recursive ./test",
    "ci": "npm run-script lint && npm run-script flow && npm test",
    "sync-externals": "npm run-script sync-schema && npm run-script sync-colors",
    "sync-schema": "cd externals/metaphysics && git fetch && git checkout origin/master && npm install && npm run dump-schema -- ../../data",
    "sync-colors": "cd externals/elan && git fetch && git checkout origin/master && cp components/lib/variables/colors.json ../../data",
    "sync-module": "/usr/bin/rsync -a --exclude .git --exclude Example --exclude node_modules --exclude externals --exclude Pod ./ Example/node_modules/emission/",
    "start-sync-module": "sane 'npm run sync-module' . --glob='{package.json,index.js,data/*.json,lib/**/*.js}'",
    "start-example-packager": "cd Example && npm start",
    "clean": "cd Example && npm run clean",
    "start-dirty": "npm run sync-module && env PATH=\"./bin:$PATH\" concurrently --kill-others --prefix=command --prefix-length=11 'sync-module' 'rn-packager'",
    "start": "npm run clean && env packager_options=--reset-cache npm run start-dirty",
    "bundle": "/usr/bin/curl 'http://localhost:8081/Emission/index.ios.bundle?platform=ios&dev=false&minify=true' -o Pod/Assets/Emission.jsbundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artsy/emission.git"
  },
  "keywords": [
    "artsy",
    "react",
    "react-native"
  ],
  "author": "Eloy Dur√°n",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artsy/emission/issues"
  },
  "homepage": "https://github.com/artsy/emission#readme",
  "files": [
    "index.js",
    "data",
    "lib"
  ],
  "dependencies": {
    "lodash": "3.10.1",
    "react": "15.0.2",
    "react-native": "0.26.2",
    "react-relay": "0.8.1",
    "remove-markdown": "0.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.0",
    "babel-relay-plugin": "^0.8.0",
    "babel-relay-plugin-loader": "^0.7.3",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-enzyme": "^0.4.2",
    "concurrently": "^2.0.0",
    "enzyme": "^2.2.0",
    "eslint": "^2.5.3",
    "eslint-plugin-flow-vars": "^0.2.1",
    "eslint-plugin-react": "^4.2.1",
    "flow-bin": "0.22.0",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "15.0.2",
    "react-dom": "15.0.2",
    "sinon": "^1.17.3"
  },
  "peerDependencies": {
    "babel-relay-plugin": "^0.8.1",
    "babel-relay-plugin-loader": "^0.8.1"
  },
  "metadata": {
    "graphql": {
      "schema": "./data/schema.json"
    }
  }
}
