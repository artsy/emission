{
  "version": "0.1.0",
  "command": "sh",
  "args": ["-c"],
  "isShellCommand": true,
  "showOutput": "silent",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "Start Packager and Storybook Server",
      "isBuildCommand": true,
      "args": ["npm start"]
    },
    {
      "taskName": "Start Typescript Compiler",
      "isBuildCommand": true,
      "args": ["node_modules/.bin/tsc"],
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "taskName": "Start Typescript Compiler (in watch mode)",
      "isBuildCommand": true,
      "args": ["node_modules/.bin/tsc --watch"],
      "isWatching": true,
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
 ]
}