// Place your settings in this file to overwrite default and user settings.
{
    "files.associations": {
        "*.podspec": "ruby",
        "Podfile": "ruby",
        "*.h": "objective-c",
        "*.js": "flow"
    },
    "search.exclude": {
        ".git/": true,
        "node_modules/": true,
        "node_modules/react-native/**/**": false,
        ".vscode": true,
        "Example/**/*": true,
        "Example/Emission/*": false,
        "Pod/Assets/*": true,
        "typings/*": true,
        "android/app/build/*": true
    },
    "files.trimTrailingWhitespace": true,

	"editor.renderWhitespace": true,
    "editor.rulers": [120],
    "editor.tabSize": 2,

    // Because we use Flow - see https://github.com/flowtype/flow-for-vscode#setup
    "javascript.validate.enable": false,
    "clang.compilationDatabase": "${workspaceRoot}/Example/compile_commands.json",
}