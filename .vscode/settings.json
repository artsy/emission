// Place your settings in this file to overwrite default and user settings.
{
    "files.associations": {
        "*.podspec": "ruby",
        "Podfile": "ruby",
        "*.h": "objective-c",
        "*.js": "javascriptreact"
    },
    "files.trimTrailingWhitespace": true,

	"editor.renderWhitespace": true,
    "editor.rulers": [120],
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "Example/build/": true,
        "Example/DerivedData": true,
        "Example/Pods/Headers/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "externals/**": true,
        "**/typings/**": true,
        "Pod/Assets/Emission.*": true,
        ".vscode/.react/*": true
    },

    // Because we use Flow - see https://github.com/flowtype/flow-for-vscode#setup
    "javascript.validate.enable": false,
    "clang.compilationDatabase": "${workspaceRoot}/Example/compile_commands.json",
    "flow.useNPMPackagedFlow": true
}
