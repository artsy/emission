{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "strictNullChecks": false
    },
    "include": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "Pod/Assets",
        "Example/Build",
        "externals",
        "build",
        "index.ios.js",
        "**/__mocks__"
    ],
    "compileOnSave": true
}
